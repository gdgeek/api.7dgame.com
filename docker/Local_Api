# Dockerfile-app

# Use PHP 8.5 with Apache
FROM  php:8.5-apache

# Enable the Rewrite Apache mod
RUN cd /etc/apache2/mods-enabled && \
    ln -s ../mods-available/rewrite.load && \
    ln -s ../mods-available/headers.load 

# Install required PHP extensions
# -- GD
RUN apt-get update && apt-get install -y \
        libfreetype6-dev \
        libjpeg62-turbo-dev \
        libpng-dev \
        git \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) gd

RUN apt-get update && apt-get install -y libzip-dev \
    && docker-php-ext-install -j$(nproc) zip

RUN docker-php-ext-install -j$(nproc) mysqli pdo pdo_mysql

# Enable OPcache + JIT configuration (opcache is built-in for PHP 8.5)
COPY ./docker/php-jit-dev.ini $PHP_INI_DIR/conf.d/opcache-jit.ini

RUN mv "$PHP_INI_DIR/php.ini-development" "$PHP_INI_DIR/php.ini"

WORKDIR /var/www/html/advanced/

# Copy HTTP server config
COPY ./docker/api-default.conf /etc/apache2/sites-available/000-default.conf
