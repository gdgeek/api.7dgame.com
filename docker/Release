# Dockerfile-app

# Use PHP 8.5 with Apache for the base image
FROM  php:8.5-apache

# Enable the Rewrite Apache mod
RUN cd /etc/apache2/mods-enabled && \
    ln -s ../mods-available/rewrite.load && \
    ln -s ../mods-available/headers.load 

# Install required PHP extensions and tools
# -- GD, Composer, unzip
RUN apt-get update && apt-get install -y \
    libfreetype6-dev \
    libjpeg62-turbo-dev \
    libpng-dev \
    git \
    unzip \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) gd

RUN docker-php-ext-install -j$(nproc) mysqli pdo pdo_mysql

# Install Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

RUN mv "$PHP_INI_DIR/php.ini-development" "$PHP_INI_DIR/php.ini"

WORKDIR /var/www/html/advanced

# Copy composer files first for caching
COPY ./advanced/composer.json ./advanced/composer.lock ./

# Install Composer dependencies (this layer will be cached if composer files don't change)
RUN composer install --no-dev --optimize-autoloader --no-interaction --no-scripts

# Copy the rest of the application
COPY ./advanced/ /var/www/html/advanced/

# Run post-install scripts
RUN composer run-script post-install-cmd --no-interaction || true

# Create necessary directories and set permissions
RUN mkdir -p /var/www/html/advanced/backend/runtime \
    /var/www/html/advanced/backend/web/assets \
    /var/www/html/advanced/console/runtime \
    /var/www/html/advanced/api/runtime \
    /var/www/html/advanced/api/web/assets \
    && chmod -R 777 /var/www/html/advanced/backend/runtime \
    && chmod -R 777 /var/www/html/advanced/backend/web/assets \
    && chmod -R 777 /var/www/html/advanced/console/runtime \
    && chmod -R 777 /var/www/html/advanced/api/runtime \
    && chmod -R 777 /var/www/html/advanced/api/web/assets

COPY files/api/config/main-local.php /var/www/html/advanced/api/config/
COPY files/api/config/params-local.php /var/www/html/advanced/api/config/
COPY files/api/config/main.php /var/www/html/advanced/api/config/
COPY files/api/config/params.php /var/www/html/advanced/api/config/
COPY files/api/config/bootstrap.php /var/www/html/advanced/api/config/

COPY files/api/web/index.php /var/www/html/advanced/api/web/
COPY files/api/web/robots.txt /var/www/html/advanced/api/web/

COPY files/common/config/main-local.php /var/www/html/advanced/common/config/
COPY files/common/config/params-local.php /var/www/html/advanced/common/config/
COPY files/common/config/main.php /var/www/html/advanced/common/config/
COPY files/common/config/params.php /var/www/html/advanced/common/config/
COPY files/common/config/bootstrap.php /var/www/html/advanced/common/config/

COPY files/console/config/main-local.php /var/www/html/advanced/console/config/
COPY files/console/config/params-local.php /var/www/html/advanced/console/config/
COPY files/console/config/main.php /var/www/html/advanced/console/config/
COPY files/console/config/params.php /var/www/html/advanced/console/config/
COPY files/console/config/bootstrap.php /var/www/html/advanced/console/config/


COPY files/backend/config/main-local.php /var/www/html/advanced/backend/config/
COPY files/backend/config/params-local.php /var/www/html/advanced/backend/config/
COPY files/backend/config/main.php /var/www/html/advanced/backend/config/
COPY files/backend/config/params.php /var/www/html/advanced/backend/config/
COPY files/backend/config/bootstrap.php /var/www/html/advanced/backend/config/

COPY files/backend/web/index.php /var/www/html/advanced/backend/web/
COPY files/backend/web/robots.txt /var/www/html/advanced/backend/web/
# RUN chmod -R 755 /var/www/html/advanced/yii

# Copy HTTP server config
COPY ./docker/000-default.conf /etc/apache2/sites-available/
