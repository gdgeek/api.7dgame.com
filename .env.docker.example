# Docker Compose Environment Variables
# Copy this file to .env.docker and fill in your actual values
# DO NOT commit .env.docker to version control!

# Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=bujiaban
MYSQL_USER=bujiaban
MYSQL_PASSWORD=local_dev_password

# JWT Configuration
# Generate a key pair with: openssl ecparam -genkey -name prime256v1 -noout -out jwt-key.pem
JWT_KEY=/var/www/.ssh/jwt-key.pem

# Tencent Cloud COS Configuration (optional for local dev)
SECRET_ID=your_secret_id_here
SECRET_KEY=your_secret_key_here
COS_BUCKETS_PUBLIC_BUCKET=your-bucket-name
COS_BUCKETS_PUBLIC_REGION=ap-nanjing
COS_BUCKETS_PRIVATE_BUCKET=your-private-bucket
COS_BUCKETS_PRIVATE_REGION=ap-nanjing

# Email Configuration (for password reset, verification)
MAILER_USERNAME=your_email@example.com
MAILER_PASSWORD=your_email_password

# WeChat Configuration (if needed)
WECHAT_APP_ID=your_wechat_app_id
WECHAT_SECRET=your_wechat_secret
WECHAT_TOKEN=your_wechat_token
WECHAT_AES_KEY=your_wechat_aes_key

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
